<h1 id="posts-header">Recommended this Month</h1>
<% if logged_in? %>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-large new-post pull-right' %>
<% end %>
<br/>


<%= render 'layouts/side_bar' %>

<div id="feed">

  <% @posts_this_month.each do |post| %>
    <%= render 'post', post: post %>
  <% end %>

  <% @pages.times do |n| %>
    <% if (params[:offset].nil? && n == 0) || params[:offset].to_s == (n * Post::PER_PAGE).to_s %>
      <%= "| Page #{n + 1}" %>
    <% else %>
      <%= link_to "| Page #{n + 1}", posts_path(offset: n * Post::PER_PAGE) %>
    <% end %>
  <% end %>
</div>
