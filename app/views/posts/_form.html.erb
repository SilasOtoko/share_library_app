<%= render 'shared/errors', obj: @post %>

<div class='form-container'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class='control-group'>
      <%= f.label :review %>
      <%= f.text_area :review, rows: 5 %>
    </div>
    <div class='control-group'>
      <%= f.label "Categories" %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
    <br/>
    <div class='control-group'>
      <%= f.label :recommended, "Share to main feed" %>
      <%= f.check_box :recommended, :checked => true do |cb| %>
        <% cb.label(class: "checkbox"){cb.check_box + 'Recommend'} %>

      <% end %>
    </div>
    <br/>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>