<% show_post ||= false %>

<div class="row">
    <div class='span0 well text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
          <i class='icon-arrow-up'></i>
        <% end %>
        <br/>
      <% end %>
      <%= comment.total_votes %> votes
      <% if logged_in? %>
        <br/>
        <%= link_to vote_post_path(comment.post, comment, vote: false), method: 'post' do %>
          <i class='icon-arrow-down'></i>
        <% end %>
      <% end %>
    </div>
    <div class="span8 well">
      <%= comment.body %>
      <p>
        <span class="quiet">posted by </span> <%= link_to comment.user.user_name %>
        of the <%= comment.user.family.family_name %> clan
        <small>at <%= display_datetime(comment.created_at) %></small>
      </p>
    </div>
  </div>