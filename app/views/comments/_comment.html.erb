<% show_post ||= false %>

<div class="row">
    <div class='vote-box up_votes text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true, class: 'vote-link' do %>
          <i class='icon-arrow-up'></i>
          <br/>
          <span id="comment_<%= comment.id %>_upvotes">+<span class="up-votes"><%= comment.up_votes %></span>
        <% end %>
      <% else %>
        <br/>
        <span id="comment_<%= comment.id %>_upvotes">+<span class="up-votes"><%= comment.up_votes %></span>
      <% end %>
    </div>
    <div class='vote-box down_votes text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true, class: 'vote-link' do %>
          <i class='icon-arrow-down'></i>
          <br/>
          <span id="comment_<%= comment.id %>_upvotes">-<span class='down-votes'><%= comment.down_votes %></span></span>
        <% end %>
      <% else %>
      <br/>
      <span id="comment_<%= comment.id %>_upvotes">-<span class='down-votes'><%= comment.down_votes %></span></span>
      <% end %>
    </div>
    <div class="comments cf">
      <%= comment.body %>
      <p>
        <span class="quiet">posted by </span> <%= link_to comment.creator.user_name, user_path(comment.creator) %>
        <small>at <%= display_datetime(comment.created_at) %></small>
      </p>
    </div>
  </div>