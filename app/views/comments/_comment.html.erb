<% show_post ||= false %>

<div class="row">
    <div class='vote-box text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
          <i class='icon-arrow-up'></i>
        <% end %>
        <br/>
      <% end %>
      <span id="comment_<%= comment.id %>_votes">+<span class="up-votes"><%= comment.up_votes %></span><br/><span class='down-votes'>-<%= comment.down_votes %></span></span>
      <% if logged_in? %>
        <br/>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
          <i class='icon-arrow-down'></i>
        <% end %>
      <% end %>
    </div>
    <div class="comments cf">
      <%= comment.body %>
      <p>
        <span class="quiet">posted by </span> <%= link_to comment.creator.user_name, user_path(comment.creator) %>
        <small>at <%= display_datetime(comment.created_at) %></small>
      </p>
    </div>
  </div>