<ul class='no-list-style'>
  <li class='menu-items'>
    <%= link_to "Main", root_path, :class => 'btn' %>
  </li>
  <li>
    <%= link_to 'My Library', user_path(current_user), class: 'btn' %>
  </li>
</ul>

<% if logged_in? %>
  <div class='btn-group'>
  <%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
      <%= current_user.user_name %>
      <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <li>
        <%= link_to edit_user_path(current_user) do %>
          <i class='icon-pencil'></i>
          edit profile
        <% end %>
      </li>
      <li>
        <%= link_to user_path(current_user) do %>
          <i class='icon-user'></i>
          view profile
        <% end %>
      </li>
      <li>
        <%= link_to logout_path(current_user) do %>
          <i class='icon-circle-arrow-left'></i>
          logout
        <% end %>
      </li>
    </ul>
  </div>
<% else %>
  <ul>
    <li>
      <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
    </li>
    <li>
      <%= link_to 'Log in', login_path, class: 'btn btn-small' %>
    </li>
  </ul>
<% end %>
