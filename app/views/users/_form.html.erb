<div class='form-container'>
  <%= form_for @user do |f| %>
    <%= render 'shared/errors', obj: @user %>
    <div class='control-group'>
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <% if !@user.new_record? && current_user.admin? %>
      <div class='control-group'>
        <%= f.label :role %>
        <%= f.text_field :role %>
      </div>
    <% end %>
     <div class='control-group'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: 'btn btn-success' %>
  <% end %>
</div>